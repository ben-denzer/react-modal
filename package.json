{
  "name": "@bdenzer/react-modal",
  "version": "0.5.3",
  "description":
    "Simple modal component for React. Styled to look like Bootstrap's modal",
  "main": "./lib/Modal.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "parcel ./demo/index.html -p 3000",
    "build": "tsc ./src/Modal/Modal.tsx --outDir ./lib --jsx react",
    "build-demo": "parcel build ./demo/index.html",
    "postbuild-demo": "mv ./dist/ ./docs",
    "prepublish": "yarn build"
  },
  "author": "Ben Denzer",
  "license": "MIT",
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".test.tsx?$",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "modulePathIgnorePatterns": ["node_modules"],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^22.2.3",
    "@types/react": "16.3.12",
    "@types/react-dom": "16.0.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.4.3",
    "node": "8.9.0",
    "parcel-bundler": "1.7.1",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "ts-jest": "^22.4.4",
    "typescript": "2.8.3",
    "yarn": "1.6.0"
  },
  "dependencies": {}
}
